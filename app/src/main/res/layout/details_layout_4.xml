<?xml version="1.0" encoding="utf-8"?>
<com.fom.rapid.views.RapidRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:measureMargin="true"
    app:measurePadding="true"
    app:measureWith="-1"
    app:resizeChildren="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580px"
        android:layout_centerInParent="true"
        android:background="@drawable/bottom_bar"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="792px"
            android:layout_height="75px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="409px"
                android:layout_height="75px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/date_time_bg_4"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text=", "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="75px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/weather_bg_4"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:src="@drawable/w_1" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/mainWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="792px"
            android:layout_height="260px"
            android:layout_marginVertical="20px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="245px"
                android:layout_height="260px"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/cardView"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical"
                android:lines="5"
                android:text="@string/gpl11"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="792px"
            android:layout_height="100px"
            android:background="@drawable/lat_long_bg_4"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:lines="1"
                    android:text="@string/gps58"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="49px"
                android:background="@drawable/lat_long_divider_4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:lines="1"
                    android:text="@string/gps59"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.fom.rapid.views.RapidRelativeLayout>
