<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:measureMargin="true"
        app:measureWith="-1"
        app:resizeChildren="true">

        <TextView
            android:id="@+id/tvPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_semi_bold"
            android:text="@string/gps68"
            android:textColor="@color/txt_one"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/permission"
            app:layout_constraintTop_toBottomOf="@+id/tvPermission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvPermDetail"/>

        <TextView
            android:id="@+id/tvPermDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/gps69"
            android:textColor="@color/txt_three"
            android:textSize="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/llPermission"/>

        <!--        <androidx.core.widget.NestedScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/detailsLl">-->

        <LinearLayout
            android:id="@+id/llPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/cameraRl"
                    android:layout_width="920px"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/permission_detail">

                    <ImageView
                        android:id="@+id/p1"
                        android:layout_width="79px"
                        android:layout_height="79px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:src="@drawable/permission_04" />

                    <TextView
                        android:id="@+id/tt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/cameraSelect"
                        android:layout_toRightOf="@+id/p1"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/gps70"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/cameraSelect"
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:src="@drawable/done_w"
                        android:tint="@color/main" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/locationRl"
                    android:layout_width="920px"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/permission_detail">

                    <ImageView
                        android:id="@+id/p2"
                        android:layout_width="79px"
                        android:layout_height="79px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:src="@drawable/permission_03" />

                    <TextView
                        android:id="@+id/tt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/locationSelect"
                        android:layout_toRightOf="@+id/p2"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/gps71"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/locationSelect"
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:src="@drawable/done_w"
                        android:tint="@color/main" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photoVideoRl"
                    android:layout_width="920px"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/permission_detail">

                    <ImageView
                        android:id="@+id/p3"
                        android:layout_width="79px"
                        android:layout_height="79px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:src="@drawable/permission_02" />

                    <TextView
                        android:id="@+id/tt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/photoVideoSelect"
                        android:layout_toRightOf="@+id/p3"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/gps72"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/photoVideoSelect"
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:src="@drawable/done_w"
                        android:tint="@color/main" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/notificationRl"
                    android:layout_width="920px"
                    android:layout_height="@dimen/_44sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/permission_detail">

                    <ImageView
                        android:id="@+id/p4"
                        android:layout_width="79px"
                        android:layout_height="79px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:src="@drawable/permission_01" />

                    <TextView
                        android:id="@+id/tt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/notificationSelect"
                        android:layout_toRightOf="@+id/p4"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="@string/gps73"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/notificationSelect"
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="50px"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:src="@drawable/done_w"
                        android:tint="@color/main" />
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/Ad_Native"
                style="@style/medium_attr"
                android:layout_above="@id/footer" />

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="807px"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_global"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:gravity="center"
                    android:text="@string/gps74"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>
        </LinearLayout>
        <!--        </androidx.core.widget.NestedScrollView>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>