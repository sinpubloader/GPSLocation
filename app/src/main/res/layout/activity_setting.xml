<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/mainBg"
        tools:context=".activity.settingActivity">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="105px"
                android:layout_height="105px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp">

                <ImageView
                    android:layout_width="63px"
                    android:layout_height="47px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/effect_back"
                    app:tint="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/back"
                android:fontFamily="@font/rubik_semibold"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/setting"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"/>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:visibility="visible"
                    android:backgroundTint="@color/cardColor"
                    android:background="@drawable/icn_home_gps_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvPhoto"
                        app:layout_constraintBottom_toBottomOf="@id/tvPhoto"/>

                    <TextView
                        android:id="@+id/tvPhoto"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/gpl29"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivPhoto"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/ivImgArrow"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvPhoto"
                        app:layout_constraintBottom_toBottomOf="@id/tvPhoto"/>

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/btn_global_square1"
                        android:backgroundTint="#484646"
                        android:layout_marginTop="@dimen/_11sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhoto"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/ivVideo"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_video"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvVideo"
                        app:layout_constraintBottom_toBottomOf="@id/tvVideo"/>

                    <TextView
                        android:id="@+id/tvVideo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/gps75"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivVideo"
                        app:layout_constraintTop_toBottomOf="@id/view1"/>

                    <ImageView
                        android:id="@+id/ivVidArrow"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvVideo"
                        app:layout_constraintBottom_toBottomOf="@id/tvVideo"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:backgroundTint="@color/cardColor"
                    android:background="@drawable/icn_home_gps_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl1"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/ivlang"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_lang"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/lang"
                        app:layout_constraintBottom_toBottomOf="@id/lang"/>

                    <TextView
                        android:id="@+id/lang"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/language"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivlang"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/lang"
                        app:layout_constraintBottom_toBottomOf="@id/lang"/>

                    <ImageView
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/btn_global_square1"
                        android:backgroundTint="#484646"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lang"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/ivrate"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_rate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/rate"
                        app:layout_constraintBottom_toBottomOf="@id/rate"/>

                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/rate_app"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivrate"
                        app:layout_constraintTop_toBottomOf="@id/view2"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/rate"
                        app:layout_constraintBottom_toBottomOf="@id/rate"/>

                    <ImageView
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/btn_global_square1"
                        android:backgroundTint="#484646"
                        android:layout_marginTop="@dimen/_11sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rate"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/ivprivacy"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_privacy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/privacy"
                        app:layout_constraintBottom_toBottomOf="@id/privacy"/>

                    <TextView
                        android:id="@+id/privacy"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/privacy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivprivacy"
                        app:layout_constraintTop_toBottomOf="@id/view3"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/privacy"
                        app:layout_constraintBottom_toBottomOf="@id/privacy"/>


                    <ImageView
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/btn_global_square1"
                        android:backgroundTint="#484646"
                        android:layout_marginTop="@dimen/_11sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/privacy"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/ivshare"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_setting_share"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/share"
                        app:layout_constraintBottom_toBottomOf="@id/share"/>

                    <TextView
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:fontFamily="@font/rubik_meduim"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:text="@string/share"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivshare"
                        app:layout_constraintTop_toBottomOf="@id/view4"/>

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icn_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/share"
                        app:layout_constraintBottom_toBottomOf="@id/share"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/Ad_Native"
            style="@style/medium_attr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>