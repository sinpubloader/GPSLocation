<?xml version="1.0" encoding="utf-8"?>
<com.fom.rapid.views.RapidRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:measureMargin="true"
    app:measurePadding="true"
    app:measureWith="-1"
    app:resizeChildren="true">

    <RelativeLayout
        android:layout_width="1080px"
        android:layout_height="580px"
        android:layout_centerInParent="true"
        android:background="@drawable/bottom_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_toLeftOf="@+id/rightRl"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="450px"
                android:layout_height="100px"
                android:background="@drawable/btn_global_square2"
                android:backgroundTint="@color/main"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text=", "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center_vertical"
                android:lines="5"
                android:text="@string/gpl11"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="580px"
                android:layout_height="100px"
                android:background="@drawable/lat_long_bg_1"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_4sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:lines="1"
                    android:text="@string/gps58"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:lines="1"
                    android:text="@string/gps59"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rightRl"
            android:layout_width="400px"
            android:layout_height="580px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="340px"
                android:layout_height="340px"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@drawable/weather_bg_1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="40px"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@drawable/w_1" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/mainWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:lines="1"
                    android:text="@string/gpl11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.fom.rapid.views.RapidRelativeLayout>
